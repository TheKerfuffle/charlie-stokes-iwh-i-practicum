doctype html
html 
    head 
        title= `${title}`
        meta(name="viewport" content="width=device-width, initial-scale=1")
        link(rel="stylesheet", href="/css/style.css")
    body    
        h1 Homepage
        if data
         table
          tr
            th Name
            th Port
            th Ferry ID
            th Water Body Type
          each ferry in data
            td #{ferry.properties.name}
            td #{ferry.properties.port}
            td #{ferry.properties.ext_ferry_id}
            td #{ferry.properties.water_body_type}
        